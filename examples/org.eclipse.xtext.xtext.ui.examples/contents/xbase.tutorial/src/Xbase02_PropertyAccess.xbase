import helper.*
/*
 * Xbase comes with sugared accessor syntax for getter and setter 
 * methods
 */
 
val person = new Person()

// setting
person.forename = 'Jimi'
person.name = 'Hendrix'

// accessing
person.forename +' '+ person.name
// Jimi Hendrix (String)


